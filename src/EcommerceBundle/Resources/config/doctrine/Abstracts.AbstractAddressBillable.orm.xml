                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="EcommerceBundle\Entity\Abstracts\AbstractAddressBillable"
                       repository-class="EcommerceBundle\Repository\AddressBillableRepository">

        <field name="addressLine1" column="address_line_1" type="string" length="127" nullable="true"/>
