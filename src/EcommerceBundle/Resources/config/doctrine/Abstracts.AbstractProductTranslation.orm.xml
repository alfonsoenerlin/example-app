<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="EcommerceBundle\Entity\Abstracts\AbstractProductTranslation">


        <field name="title" column="title" type="string" length="255" nullable="false" />
        <field name="description" column="description" type="text" nullable="true" />
        <field name="slug" column="slug" type="string" length="64" nullable="false" />

    </mapped-superclass>

</doctrine-mapping>
